<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.validation.ValidationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="@dimen/title_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin_top"
            android:text="@string/validation_title"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/describle"
            android:layout_width="@dimen/describle_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/describle_margin_top"
            android:text="@string/validation_describle"
            android:textSize="@dimen/describle_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/code_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/describle">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code_one"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:focusable="false"
                app:layout_constraintEnd_toStartOf="@+id/code_twe"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1"
                    android:textSize="20dp"
                    tools:text="9"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code_twe"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:focusable="false"
                app:layout_constraintEnd_toStartOf="@+id/code_three"
                app:layout_constraintStart_toEndOf="@+id/code_one">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1"
                    android:textSize="20dp"
                    tools:text="3"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code_three"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:focusable="false"
                app:layout_constraintEnd_toStartOf="@+id/code_four"
                app:layout_constraintStart_toEndOf="@+id/code_twe">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1"
                    android:textSize="20dp"
                    tools:text="7"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code_four"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="@+id/code_five"
                app:layout_constraintStart_toEndOf="@+id/code_three">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1"
                    android:textSize="20dp"
                    tools:text="2"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code_five"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/code_four">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:digits="1"
                    tools:text="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="0dp"
            android:text="Validar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/code_line"
            app:layout_constraintVertical_bias="0.90"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>